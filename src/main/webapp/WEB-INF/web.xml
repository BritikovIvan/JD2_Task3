<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>by.it_academy.task3.controller.MainServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>by.it_academy.task3.controller.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DisplayImage</servlet-name>
    <servlet-class>by.it_academy.task3.controller.DisplayImageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DisplayImage</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>task2</servlet-name>
    <jsp-file>/resources/html/task2.html</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>task2</servlet-name>
    <url-pattern>/task</url-pattern>
  </servlet-mapping>

</web-app>
